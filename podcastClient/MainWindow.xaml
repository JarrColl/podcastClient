<Window x:Name="MainWindow1" x:Class="podcastClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:podcastClient"
        mc:Ignorable="d"
        Title="Podcast Client" Height="500" MinHeight="400" Width="800" MinWidth="800" WindowStartupLocation="CenterScreen" Background="White" Foreground="#FF7A7979" >
    <Window.Resources>
        <Style x:Key="GridViewColumnHeaderStyle1" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Border BorderThickness="0,0,0,1" BorderBrush="Black" Background="Transparent">
                            <TextBlock x:Name="ContentHeader" Text="{TemplateBinding Content}" Padding="5,5,5,0" Width="{TemplateBinding Width}" TextAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2.3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.7*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" x:Name="btnDownloads" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,20,0" Background="Transparent" Click="btnDownloads_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image x:Name="downloadImage" Source="images/download-icon.png"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="1" x:Name="btnSearchFeed" Content="Search Feeds" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,20,0"/>
                <Button Grid.Column="2" x:Name="btnManualAdd" Content="Add Feed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="btnManualAdd_Click" Margin="0,0,20,0"/>
                <Button Grid.Column="3" x:Name="btnSettings" Content="Settings" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>


        </Grid>
        <TabControl Grid.Column="1" Grid.Row="1">
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Subscriptions"/>
                </TabItem.Header>
                <ListView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="1" x:Name="lvPodFeeds" Grid.Row="1" Background="White" Foreground="Black" BorderBrush="Black" SelectionChanged="lvPodFeeds_SelectionChanged" MouseDoubleClick="lvPodFeeds_MouseDoubleClick"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Downloads"/>
                </TabItem.Header>
                <ListView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="1" x:Name="lvPodDownloads" Grid.Row="1" Background="White" Foreground="Black" BorderBrush="Black" SelectionChanged="lvPodDownloads_SelectionChanged"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Episodes"/>
                </TabItem.Header>
                <ListView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="1" x:Name="lvPodEpisodes" Grid.Row="1" Background="White" Foreground="Black" BorderBrush="Black" SelectionChanged="lvPodDownloads_SelectionChanged"/>
            </TabItem>
        </TabControl>
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="0.75*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Image x:Name="imgFeedImage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <Label Grid.Row="1" Content="" Name="lblTitle" FontSize="22"/>
                <TextBox Name="txtDesc" Grid.Row="3" TextWrapping="Wrap"/>
            </Grid>
        </Border>

    </Grid>

</Window>

